# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4

[*.{ts,tsx,js,jsx,css,scss}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2
max_line_length = 80
